<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="XCrossCropImage.MainPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:abstractions="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions"
             Title="XF Vietnam">

    <StackLayout>
        <abstractions:CircleImage Aspect="Fill"
                                  HeightRequest="100"
                                  HorizontalOptions="Center"
                                  Source="{Binding AvatarImageSource}"
                                  WidthRequest="100" />
        <Button Command="{Binding TakePhotoCommand}" Text="Take photo from Camera" />
        <Button Command="{Binding ChoosePhotoCommand}" Text="Take photo from Galery" />
    </StackLayout>

</ContentPage>